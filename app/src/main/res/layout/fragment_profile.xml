<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    tools:context=".presentation.fragments.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/circle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="250dp"
                app:layout_constraintVertical_bias="0.2"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/profile"
                />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/label_email"
                style="@style/ProfileStyleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/circle" />

            <EditText
                android:id="@+id/email"
                style="@style/ProfileStyleEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:enabled="false"
                android:inputType="textEmailAddress"
                android:text="@string/example_mail_com"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_email"
                app:layout_constraintWidth_percent="0.6"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/label_name"
                style="@style/ProfileStyleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/full_name"
                app:layout_constraintEnd_toEndOf="@+id/email"
                app:layout_constraintStart_toStartOf="@+id/email"
                app:layout_constraintTop_toBottomOf="@id/email" />

            <EditText
                android:id="@+id/name"
                style="@style/ProfileStyleEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:enabled="false"
                android:inputType="text"
                android:text="@string/gordana_ilic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_name"
                app:layout_constraintWidth_percent="0.6"
                tools:ignore="LabelFor" />

            <ToggleButton
                android:id="@+id/editName"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:checked="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/name"
                app:layout_constraintStart_toEndOf="@id/name"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="10dp"
                android:textOff=""
                android:textOn=""
                android:background="@drawable/baseline_edit"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/label_password"
                style="@style/ProfileStyleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/password"
                app:layout_constraintEnd_toEndOf="@+id/name"
                app:layout_constraintStart_toStartOf="@+id/name"
                app:layout_constraintTop_toBottomOf="@id/name" />

            <EditText
                android:id="@+id/password"
                style="@style/ProfileStyleEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:enabled="false"
                android:inputType="textPassword"
                android:text="@string/example123"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_password"
                app:layout_constraintWidth_percent="0.6"
                tools:ignore="LabelFor" />

            <ToggleButton
                android:id="@+id/editPassword"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:checked="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/password"
                app:layout_constraintStart_toEndOf="@id/password"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="10dp"
                android:textOff=""
                android:textOn=""
                android:background="@drawable/baseline_edit"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#17000000"
                android:drawableLeft="@drawable/baseline_logout"
                android:text="@string/logout"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/password" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>