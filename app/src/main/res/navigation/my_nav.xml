<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/cocktailsFragment">

    <fragment
        android:id="@+id/cocktailsFragment"
        android:name="com.example.cocktails.presentation.fragments.cocktails.CocktailsFragment"
        android:label="@string/cocktails"
        tools:layout="@layout/fragment_cocktails">
        <argument
            android:name="argSpec"
            android:defaultValue=''
            app:argType="string" />
        <argument
            android:name="filterBy"
            android:defaultValue=''
            app:argType="string" />
        <action
            android:id="@+id/action_cocktailsFragment_to_cocktailDetailsFragment"
            app:destination="@id/cocktailDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.cocktails.presentation.fragments.favorites.FavoritesFragment"
        android:label="@string/favorites"
        tools:layout="@layout/fragment_favorites">
        <action
            android:id="@+id/action_favoritesFragment_to_cocktailDetailsFragment"
            app:destination="@id/cocktailDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.cocktails.presentation.fragments.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.cocktails.presentation.fragments.filter.FilterFragment"
        android:label="Filter"
        tools:layout="@layout/fragment_filter">
        <action
            android:id="@+id/action_filterFragment_to_specificFilterFragment"
            app:destination="@id/specificFilterFragment" />
        <argument
            android:name="argFilter"
            android:defaultValue='""'
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/specificFilterFragment"
        android:name="com.example.cocktails.presentation.fragments.specific.SpecificFilterFragment"
        android:label="SpecificFilter"
        tools:layout="@layout/fragment_specificfilter">
        <argument
            android:name="argFilter"
            android:defaultValue='""'
            app:argType="string" />
        <action
            android:id="@+id/action_specificFilterFragment_to_cocktailsFragment"
            app:destination="@id/cocktailsFragment"
            app:popUpTo="@id/cocktailsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/cocktailDetailsFragment"
        android:name="com.example.cocktails.presentation.fragments.details.CocktailDetailsFragment"
        android:label="Cocktail details"
        tools:layout="@layout/fragment_cocktail_details">

        <action
            android:id="@+id/action_cocktailDetailsFragment_to_cocktailsFragment"
            app:destination="@id/cocktailsFragment"
            app:popUpTo="@id/cocktailsFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_cocktailDetailsFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment"
            app:popUpTo="@id/favoritesFragment"
            app:popUpToInclusive="false" />
        <argument
            android:name="argDetails"
            app:argType="integer"
            android:defaultValue="1" />

        <argument
            android:name="argsFavorite"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="argEmail"
            app:argType="string"
            android:defaultValue=" " />
    </fragment>
</navigation>